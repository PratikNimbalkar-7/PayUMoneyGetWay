@model IEnumerable<ProductDemo.Models.CartItem>

@{
    ViewData["Title"] = "CheckOut";
}

<h1>CheckOut</h1>

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pro_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pro_Prize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th> Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pro_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pro_Prize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @(item.Pro_Prize * item.Quantity)
            </td>
          @*   <td>
                <a asp-action="Edit" asp-route-id="@item.Pro_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Pro_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Pro_Id">Delete</a>
            </td> *@
        </tr>
}

        <h3>Total Amount: @ViewBag.TotalAmount</h3>

        <form asp-controller="Payment" asp-action="ProcessPayment" method="post">
            <div class="form-group">
                <label for="firstname">First Name</label>
                <input type="text" id="firstname" name="FirstName" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="Email" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" id="address" name="address" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="phone">Phone</label>
                <input type="text" id="phone" name="Phone" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">Proceed to Payment</button>
        </form>

       @*  <form asp-controller="Cart" asp-action="ProccessPayment" method="post">
            <button type="submit" class="btn btn-primary">Proceed to Payment</button>
        </form> *@
    </tbody>
</table>
